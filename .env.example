# Environment Variables Configuration
# Copy this file to .env and update the values

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/ai_arabic_db
DATABASE_TEST_URL=postgresql://user:password@localhost:5432/ai_arabic_test_db

# API Configuration
API_HOST=localhost
API_PORT=8000
API_SECRET_KEY=your-secret-key-here
API_ACCESS_TOKEN_EXPIRE_MINUTES=30

# AI Model Configuration
MODEL_CACHE_DIR=./data/models
HUGGINGFACE_CACHE_DIR=./data/cache/huggingface
MAX_SEQUENCE_LENGTH=512
BATCH_SIZE=32

# Arabic NLP Configuration
ARABIC_MODEL_NAME=aubmindlab/bert-base-arabertv02
ENABLE_DIACRITIZATION=true
ENABLE_STEMMING=true

# Frontend Configuration
REACT_APP_API_BASE_URL=http://localhost:8000
REACT_APP_ENVIRONMENT=development
REACT_APP_ENABLE_RTL=true

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# File Upload Configuration
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=txt,pdf,docx
UPLOAD_DIR=./data/uploads

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
ENABLE_FILE_LOGGING=true

# External Services
GOOGLE_TRANSLATE_API_KEY=your-google-translate-api-key
OPENAI_API_KEY=your-openai-api-key

# Security Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
ENABLE_HTTPS=false
SSL_CERT_PATH=
SSL_KEY_PATH=

# Development Configuration
DEBUG_MODE=true
ENABLE_AUTO_RELOAD=true
ENABLE_DOCS=true